	if (end > 0)
	{
		iterator k = begin();
		for (size_t i = 0; i < end; ++i, ++k)
			*k |= v[i];
	}
}

template <class T>
void
slice_array<T>::operator<<= (const valarray<T>& v) const
{
	size_t end = slice_.length();
	if (end > 0)
	{
		iterator k = begin();
		for (size_t i = 0; i < end; ++i, ++k)
			*k <<= v[i];
	}
}

