// valarray logical operators

template<class T>
valarray<bool>
operator&& (const valarray<T>& x, const valarray<T>& y)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = x[i] && y[i];
	return result;
}

template<class T>
valarray<bool>
operator&& (const valarray<T>& x, const T& t)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = x[i] && t;
	return result;
}

template<class T>
valarray<bool>
operator&& (const T& t, const valarray<T>& x)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = t && x[i];
	return result;
}

template<class T>
valarray<bool>
operator|| (const valarray<T>& x, const valarray<T>& y)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = x[i] || y[i];
	return result;
}

template<class T>
valarray<bool>
operator|| (const valarray<T>& x, const T& t)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = x[i] || t;
	return result;
}

template<class T>
valarray<bool>
operator|| (const T& t, const valarray<T>& x)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = t || x[i];
	return result;
}

template<class T>
valarray<bool>
operator== (const valarray<T>& x, const valarray<T>& y)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = x[i] == y[i];
	return result;
}

template<class T>
valarray<bool>
operator== (const valarray<T>& x, const T& t)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = x[i] == t;
	return result;
}

template<class T>
valarray<bool>
operator== (const T& t, const valarray<T>& x)
{
	const size_t s = x.size();
	valarray<bool> result;
	result.init(s);
	for (size_t i = 0; i < s; ++i)
		result[i] = t == x[i];
	return result;
}

